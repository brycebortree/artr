<div>
  <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
      <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

    <% flicks.forEach(function(flick, index) { %>
    <% if (index === 0) { %>
      <div class="item active">
        <img src="http://farm<%= flick.farm %>.staticflickr.com/<%= flick.server %>/<%= flick.id %>_<%= flick.secret %>_z.jpg">
      </div>
    <% } else { %>
      <div class="item">
        <img src="http://farm<%= flick.farm %>.staticflickr.com/<%= flick.server %>/<%= flick.id %>_<%= flick.secret %>_z.jpg">
      </div>
      <% } %>
    <% }); %>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div>
  <% twits.forEach(function(tweet) { %>
    <div class="card" style="border:1px black solid">
      <p><span class="user"><%= currentUser.username %></span></p>
      <p><span class="query"><%= q %></span>, 2016</p>
      <p>The Artr</p>
      <p><span class="statement"><%= tweet.text %></span></p>
    </div>
  <% }); %>
</div>

<div>
<button type="button" class="saveArt btn btn-success">Save Art</button>
</div>